# Production Environment Variables Template
# Copy this to .env.production and fill in your production values

# Application Environment
NODE_ENV=production
PORT=3000
BACKEND_PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/medrx_production
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_production_razorpay_key_id

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=MedRx+ <noreply@medrx.com>

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Elasticsearch & Kibana
ELASTIC_PASSWORD=your_elastic_password

# Grafana
GRAFANA_PASSWORD=your_grafana_password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# CDN Configuration
CDN_URL=https://cdn.medrx.com
AWS_S3_BUCKET=medrx-assets
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# Error Tracking (Sentry)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=medrx-plus

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=medrx-backups

# Monitoring
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ALLOWED_ORIGINS=https://medrx.com,https://www.medrx.com

# API Versioning
API_VERSION=v1
ENABLE_API_DOCS=false

# Feature Flags
ENABLE_PRESCRIPTION_AI=true
ENABLE_TELEMEDICINE=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_BULK_ORDERS=true

# Third-party Integrations
PHARMACY_LICENSE_API=your_pharmacy_license_verification_api
INSURANCE_API_KEY=your_insurance_api_key
DRUG_DATABASE_API=your_drug_database_api_key

# Compliance
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=true
AUDIT_LOG_RETENTION=2555