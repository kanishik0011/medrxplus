{
  "name": "medrx-plus-pharmacy",
  "version": "1.0.0",
  "description": "Full-stack pharmacy delivery platform - Next.js frontend with Node.js backend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:performance": "lighthouse-ci autorun",
    "backend": "cd backend && npm run dev",
    "full-dev": "concurrently \"npm run dev\" \"npm run backend\"",
    "install-all": "npm install && cd backend && npm install",
    "docker:build": "docker build -t medrx-frontend .",
    "docker:run": "docker run -p 3000:3000 medrx-frontend",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "snyk test",
    "analyze": "cross-env ANALYZE=true npm run build",
    "db:migrate": "cd backend && npm run migrate",
    "db:seed": "cd backend && npm run seed",
    "deploy:staging": "vercel --target staging",
    "deploy:production": "vercel --target production --prod"
  },
  "dependencies": {
    "@next/font": "^14.0.0",
    "@sentry/nextjs": "^10.13.0",
    "@tanstack/react-query": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "clsx": "^2.0.0",
    "elastic-apm-node": "^4.13.0",
    "express-rate-limit": "^8.1.0",
    "framer-motion": "^10.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.400.0",
    "next": "^15.0.0",
    "next-pwa": "^5.6.0",
    "postcss": "^8.0.0",
    "prom-client": "^15.1.3",
    "razorpay": "^2.9.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.0.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "winston": "^3.17.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "workbox-webpack-plugin": "^7.3.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@builder.io/partytown": "^0.10.3",
    "@types/eslint": "^8.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0"
  },
  "keywords": [
    "pharmacy",
    "delivery",
    "healthcare",
    "next.js",
    "node.js",
    "mongodb",
    "prescription",
    "medicine"
  ],
  "author": "Medrx+ Team",
  "license": "MIT"
}
